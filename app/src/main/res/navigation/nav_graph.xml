<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.alisayar.kitapligimuygulamas_proje2.home.HomeFragment"
        android:label="Kitaplığım"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_addFragment"
            app:destination="@id/addFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.alisayar.kitapligimuygulamas_proje2.profile.ProfileFragment"
        android:label="Profil"
        tools:layout="@layout/fragment_profile" >
        <argument
            android:name="userId"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/discoverFragment"
        android:name="com.alisayar.kitapligimuygulamas_proje2.discover.DiscoverFragment"
        android:label="Keşfet"
        tools:layout="@layout/fragment_discover" >
        <action
            android:id="@+id/action_discoverFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="com.alisayar.kitapligimuygulamas_proje2.add.AddFragment"
        android:label="Kitap Ara" >
        <action
            android:id="@+id/action_addFragment_to_bookDetailFragment"
            app:destination="@id/bookDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/bookDetailFragment"
        android:name="com.alisayar.kitapligimuygulamas_proje2.bookdetail.BookDetailFragment"
        android:label="Kitap Detayı">
        <argument
            android:name="bookId"
            app:argType="string" />
        <action
            android:id="@+id/action_bookDetailFragment_to_addPostFragment"
            app:destination="@id/addPostFragment" />
    </fragment>
    <fragment
        android:id="@+id/addPostFragment"
        android:name="com.alisayar.kitapligimuygulamas_proje2.addpost.AddPostFragment"
        android:label="Gönderi ekle">
        <argument
            android:name="bookId"
            app:argType="string" />
        <action
            android:id="@+id/action_addPostFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>